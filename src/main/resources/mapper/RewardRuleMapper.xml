<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reward_project.play_record.mapper.RewardRuleMapper">

    <!--    前面是entity里的，后面是数据库里的-->
    <resultMap id="RewardRuleMap" type="com.reward_project.play_record.entity.RewardRule">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="rule" column="rule"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="addRule" resultMap="RewardRuleMap">
        <!--        时间类: now()不是对象传入-->
        insert into `reward_rule` (`id`, `name`, `rule`, `status`, `create_time`, `update_time`)
        values
        (#{id}, #{name}, #{rule}, #{status}, now(), now())
    </select>

    <select id="updateRule" resultMap="RewardRuleMap">
        <!--        时间类: now()不是对象传入-->
        UPDATE `reward_rule`
        SET
        `rule` = #{rule},
        `status` = #{status},
        `update_time` = now()
        WHERE `id` = #{id}
        AND `name` = #{name}
    </select>

    <select id="queryById" resultMap="RewardRuleMap">
        SELECT *
        FROM `reward_rule`
        WHERE `id` = #{id}
    </select>

    <select id="queryByName" resultMap="RewardRuleMap">
        SELECT *
        FROM `reward_rule`
        WHERE `name` = #{name}
    </select>

</mapper>